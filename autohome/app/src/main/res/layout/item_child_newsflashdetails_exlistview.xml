<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_newsflash_details_child_userheadimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/item_newsflash_details_child_usernametv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        android:textColor="#0576d2"
        android:layout_toRightOf="@id/item_newsflash_details_child_userheadimg"
        android:layout_alignTop="@id/item_newsflash_details_child_userheadimg"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/item_newsflash_details_child_contenttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        android:layout_below="@id/item_newsflash_details_child_userheadimg"
        android:layout_alignStart="@id/item_newsflash_details_child_usernametv" />

</RelativeLayout>