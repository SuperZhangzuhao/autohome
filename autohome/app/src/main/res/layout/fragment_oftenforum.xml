<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/oftenforum_carimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/car"/>
            <TextView
                android:id="@+id/oftenforum_titleonetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车系论坛"
                android:layout_toRightOf="@id/oftenforum_carimg"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为你的爱车找到队伍"
                android:layout_toRightOf="@id/oftenforum_carimg"
                android:layout_alignParentBottom="true"
                android:textSize="10dp"
                android:layout_marginBottom="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#BEBEBE"
                android:layout_alignParentBottom="true"/>
             </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/oftenforum_placeimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/place"/>
            <TextView
                android:id="@+id/oftenforum_titletwotv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车系论坛"
                android:layout_toRightOf="@id/oftenforum_placeimg"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为你的爱车找到队伍"
                android:layout_toRightOf="@id/oftenforum_placeimg"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                android:layout_marginBottom="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#BEBEBE"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/oftenforum_zutiimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/zuti"/>
            <TextView
                android:id="@+id/oftenforum_titlethreetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车系论坛"
                android:layout_toRightOf="@id/oftenforum_zutiimg"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为你的爱车找到队伍"
                android:layout_toRightOf="@id/oftenforum_zutiimg"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:textSize="10dp"
                android:layout_marginBottom="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#BEBEBE"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>