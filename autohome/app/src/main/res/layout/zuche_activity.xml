<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/zhuce_backimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/zhuce_backtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:layout_toRightOf="@id/zhuce_backimg"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="#0e8cc2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BEBEBE"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BABABA"
        android:layout_marginTop="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:orientation="vertical"
        android:layout_marginTop="25dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BEBEBE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/zhuce_userid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="手机号/邮箱/用户名"
                android:layout_marginLeft="10dp"
                android:textColorHint="#d6d6d6"
                android:background="#fff"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BEBEBE"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/zhuce_usercode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="密码"
                android:layout_marginLeft="10dp"
                android:textColorHint="#d6d6d6"
                android:background="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:layout_marginLeft="10dp"
                android:textColorHint="#d6d6d6"
                android:background="#fff"
                android:id="@+id/zhuceet" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE"/>
    <Button
        android:id="@+id/zhuce_nextbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成注册"
        android:background="#0e8cc2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>


</LinearLayout>