<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_innovate_listview_onepic_headimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>


        <TextView
            android:id="@+id/item_innovate_listview_onepic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试"
            android:layout_marginLeft="20dp"
            android:textSize="13sp"
            android:textColor="#d01c68da"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:gravity="center_vertical"
           android:layout_weight="0.5">
           <ImageView
               android:id="@+id/item_innovate_listview_onepic_img"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="#e2e2e2"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_innovate_listview_onepic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="#000"
                android:singleLine="false"
                />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="2">
        <TextView
            android:id="@+id/item_innovate_listview_onepic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="2016-05-05"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/item_innovate_listview_onepic_talkcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="23"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentRight="true"
            android:textSize="10sp"/>
        <ImageView
            android:id="@+id/innovate_pinglunimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_toLeftOf="@id/item_innovate_listview_onepic_talkcount"
            android:src="@mipmap/pinglun"/>
        <TextView
            android:id="@+id/item_innovate_listview_onepic_zancount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_toLeftOf="@id/innovate_pinglunimg"
            android:layout_marginRight="15dp"
            android:textSize="10sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zan"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_toLeftOf="@id/item_innovate_listview_onepic_zancount"/>

    </RelativeLayout>

</LinearLayout>